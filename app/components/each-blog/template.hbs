{{#unless isEditable}}
  <div class="row">
    <div class="col s9">
      <div class="card">
        <div class="card-content">
          <span class="card-title">{{blog.title}} by <span class="grey-text text-lighten-1"><b>{{blog.authorName}}</b></span></span>

          {{#paper-button action="toggleEditable"}}Edit{{paper-icon icon="edit"}}{{/paper-button}}

          <p>{{blog.content}}</p>
        </div>
      </div>
    </div>
  </div>

{{else}}

  <div class="row">
    <div class="col s9">
      <div class="card">
        <div class="card-content">
          <span class="card-title">{{input valueBinding='blog.title'}} by <span class="grey-text text-lighten-1"><b>{{blog.authorName}}</b></span></span>

          {{#paper-button action="confirmEdit" param=blog}}Confirm{{paper-icon icon="edit"}}{{/paper-button}}

          <p>{{textarea valueBinding='blog.content'}}</p>
        </div>
      </div>
    </div>
  </div>
{{/unless}}
